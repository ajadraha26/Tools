    <script>
        // Tab switching functionality
        const pdfToJpgTab = document.getElementById('pdfToJpgTab');
        const jpgToPdfTab = document.getElementById('jpgToPdfTab');
        const pdfToJpgConverter = document.getElementById('pdfToJpgConverter');
        const jpgToPdfConverter = document.getElementById('jpgToPdfConverter');
        
        pdfToJpgTab.addEventListener('click', () => {
            pdfToJpgTab.classList.add('active');
            jpgToPdfTab.classList.remove('active');
            pdfToJpgConverter.style.display = 'block';
            jpgToPdfConverter.style.display = 'none';
        });
        
        jpgToPdfTab.addEventListener('click', () => {
            jpgToPdfTab.classList.add('active');
            pdfToJpgTab.classList.remove('active');
            jpgToPdfConverter.style.display = 'block';
            pdfToJpgConverter.style.display = 'none';
        });
        
        // File upload functionality for PDF to JPG
        const pdfUploadArea = document.getElementById('pdfUploadArea');
        const pdfInput = document.getElementById('pdfInput');
        
        pdfUploadArea.addEventListener('click', () => {
            pdfInput.click();
        });
        
        pdfUploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            pdfUploadArea.style.borderColor = 'var(--primary-color)';
            pdfUploadArea.style.backgroundColor = 'rgba(231, 76, 60, 0.1)';
        });
        
        pdfUploadArea.addEventListener('dragleave', () => {
            pdfUploadArea.style.borderColor = '#ddd';
            pdfUploadArea.style.backgroundColor = 'transparent';
        });
        
        pdfUploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            pdfUploadArea.style.borderColor = '#ddd';
            pdfUploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                pdfInput.files = e.dataTransfer.files;
                updatePdfFileInfo();
            }
        });
        
        pdfInput.addEventListener('change', updatePdfFileInfo);
        
        function updatePdfFileInfo() {
            if (pdfInput.files.length) {
                const file = pdfInput.files[0];
                pdfUploadArea.innerHTML = `
                    <div style="font-size: 3rem;">✓</div>
                    <h3>${file.name}</h3>
                    <p>${(file.size / 1024).toFixed(2)} KB</p>
                `;
            }
        }
        
        // File upload functionality for JPG to PDF
        const jpgUploadArea = document.getElementById('jpgUploadArea');
        const jpgInput = document.getElementById('jpgInput');
        
        jpgUploadArea.addEventListener('click', () => {
            jpgInput.click();
        });
        
        jpgUploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            jpgUploadArea.style.borderColor = 'var(--primary-color)';
            jpgUploadArea.style.backgroundColor = 'rgba(231, 76, 60, 0.1)';
        });
        
        jpgUploadArea.addEventListener('dragleave', () => {
            jpgUploadArea.style.borderColor = '#ddd';
            jpgUploadArea.style.backgroundColor = 'transparent';
        });
        
        jpgUploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            jpgUploadArea.style.borderColor = '#ddd';
            jpgUploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                jpgInput.files = e.dataTransfer.files;
                updateJpgFileInfo();
            }
        });
        
        jpgInput.addEventListener('change', updateJpgFileInfo);
        
        function updateJpgFileInfo() {
            if (jpgInput.files.length) {
                const fileList = Array.from(jpgInput.files);
                const totalSize = fileList.reduce((sum, file) => sum + file.size, 0);
                
                jpgUploadArea.innerHTML = `
                    <div style="font-size: 3rem;">✓</div>
                    <h3>${fileList.length} ${fileList.length === 1 ? 'File' : 'Files'} Selected</h3>
                    <p>Total size: ${(totalSize / 1024).toFixed(2)} KB</p>
                `;
            }
        }
        
        // Show/hide page range input based on selection
        const pagesToConvert = document.getElementById('pagesToConvert');
        const pageRangeContainer = document.getElementById('pageRangeContainer');
        
        pagesToConvert.addEventListener('change', () => {
            pageRangeContainer.style.display = 
                pagesToConvert.value === 'range' ? 'block' : 'none';
        });
        
        // Show/hide custom size inputs based on selection
        const pageSize = document.getElementById('pageSize');
        const customSizeContainer = document.getElementById('customSizeContainer');
        
        pageSize.addEventListener('change', () => {
            customSizeContainer.style.display = 
                pageSize.value === 'custom' ? 'block' : 'none';
        });
        
        // Conversion buttons (would be connected to actual conversion logic)
        document.getElementById('convertPdfToJpgBtn').addEventListener('click', () => {
            if (!pdfInput.files.length) {
                alert('Please select a PDF file first');
                return;
            }
            
            // In a real implementation, this would convert PDF to JPG
            alert('PDF to JPG conversion would happen here in a real implementation.\n\nSelected options:\n' +
                  `Quality: ${document.getElementById('jpgQuality').value}\n` +
                  `Color Mode: ${document.getElementById('colorMode').value}\n` +
                  `Pages: ${document.getElementById('pagesToConvert').value}`);
        });
        
        document.getElementById('convertJpgToPdfBtn').addEventListener('click', () => {
            if (!jpgInput.files.length) {
                alert('Please select at least one JPG image first');
                return;
            }
            
            // In a real implementation, this would convert JPG to PDF
            alert('JPG to PDF conversion would happen here in a real implementation.\n\nSelected options:\n' +
                  `Quality: ${document.getElementById('pdfQuality').value}\n` +
                  `Page Size: ${document.getElementById('pageSize').value}\n` +
                  `Orientation: ${document.getElementById('pageOrientation').value}`);
        });
    </script>
</body>
